@model CRUD_PRUEBA.Models.Empleado

@{
    ViewData["Title"] = "Editar Empleado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Editar Información del Empleado</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control" required placeholder="Ingrese el nombre" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="Nue" />

                        <div class="form-group mb-3">
                            <label asp-for="Correo" class="form-label"></label>
                            <input asp-for="Correo" class="form-control" required type="email" placeholder="correo@ejemplo.com" />
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Puesto" class="form-label"></label>
                            <input asp-for="Puesto" class="form-control" placeholder="Ej. Analista, Desarrollador..." />
                            <span asp-validation-for="Puesto" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-3 py-2">
                                ← Volver
                            </a>
                            <button type="submit" class="btn btn-success px-4 py-2">
                                Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
