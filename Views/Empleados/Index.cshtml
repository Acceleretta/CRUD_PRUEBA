@model IEnumerable<CRUD_PRUEBA.Models.Empleado>

@{
    ViewData["Title"] = "Empleados";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">Gestión de Empleados</h1>
            <p class="text-muted">Administra la información de los empleados</p>
        </div>
        <a asp-action="Create" class="btn btn-primary d-flex align-items-center gap-2" style="width: 180px;">
            <i class="material-icons">person_add</i>
            <span>Agregar Empleado</span>
        </a>

    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>No. Empleado</th>
                            <th>Empleado</th>
                            <th>Correo</th>
                            <th>Puesto</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Nue</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar me-3">@item.Nombre.Substring(0,1).ToUpper()</div>
                                        <div>
                                            <div class="fw-semibold">@item.Nombre</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <a href="mailto:@item.Correo" class="text-decoration-none">@item.Correo</a>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark">@item.Puesto</span>
                                </td>
                                <td>
                                    <div class="d-flex justify-content-end gap-2">
                                        <a asp-action="Edit" asp-route-id="@item.Nue" 
                                           class="btn btn-sm btn-outline-primary" title="Editar">
                                            <i class="material-icons">edit</i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Nue" 
                                           class="btn btn-sm btn-outline-info" title="Detalles">
                                            <i class="material-icons">visibility</i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Nue" 
                                           class="btn btn-sm btn-outline-danger" title="Eliminar">
                                            <i class="material-icons">delete</i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <style>
        .avatar {
            width: 35px;
            height: 35px;
            background-color: #e9ecef;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            color: #495057;
        }

        .material-icons {
            font-size: 18px;
            line-height: 1;
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
        }

        .badge {
            font-weight: 500;
            padding: 0.5em 0.75em;
        }

        .table > :not(caption) > * > * {
            padding: 1rem 0.75rem;
        }

        .card {
            border: none;
            border-radius: 0.5rem;
        }

        .card-body {
            padding: 1.5rem;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0,0,0,.02);
        }
    </style>
}