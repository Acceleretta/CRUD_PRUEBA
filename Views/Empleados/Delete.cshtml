@model CRUD_PRUEBA.Models.Empleado

@{
    ViewData["Title"] = "Eliminar Empleado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Confirmar Eliminación</h4>
                </div>
                <div class="card-body">
                    <p class="lead">¿Está seguro que desea eliminar este empleado?</p>

                    <dl class="row mb-4">
                        <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.Nombre):</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.Correo):</dt>
                        <dd class="col-sm-8">
                            <a href="mailto:@Model.Correo" class="text-decoration-none">@Html.DisplayFor(model => model.Correo)</a>
                        </dd>

                        <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.Puesto):</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Puesto)</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Nue" />
                        <div class="d-flex justify-content-between gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary px-3 py-2">
                                ← Volver
                            </a>
                            <button type="submit" class="btn btn-danger px-4 py-2">
                                Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
